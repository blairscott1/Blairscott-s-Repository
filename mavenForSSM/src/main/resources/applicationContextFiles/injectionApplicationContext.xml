<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd ">
	<!-- set方式注入 -->
	<bean name="user3" class="com.snsoft.crm.bean.User">
		<!-- 值类型注入:为user3对象中名为name的属性注入Tom作为值 -->
		<property name="name" value="Tom"></property>
		<property name="age" value="18"></property>
		<!-- 引入类型注入:为user3注入下方配置的sheet对象 -->
		<property name="sheet" ref="sheet"></property>
	</bean>
	
	<!-- 将sheet对象注入到容器中 -->
	<bean name="sheet" class="com.snsoft.crm.bean.Sheet">
		<property name="sheeticode" value="LMM0010000001"></property>
		<property name="sheetcode" value="LMM0010001"></property>
		<property name="cuicode" value="LMM001"></property>
	</bean>
	
	<!-- 构造函数注入 -->
	<bean name="user4" class="com.snsoft.crm.bean.User">
		<!-- 
			name: 构造函数的参数名
			index:构造函数中的参数所对应的索引
			type: 该参数所对应的类全路径
		 -->
		<constructor-arg name="name" index="0" type="java.lang.String" value="Jerry"></constructor-arg>
		<constructor-arg name="sheet" ref="sheet"></constructor-arg>
	</bean>
	
	<!-- 复杂类型注入 -->
	<bean name="cb" class="com.snsoft.crm.bean.CollectionBean">
		<!-- 如果数组中只准备注入一个值(对象),可以直接用value(ref) -->
		<!-- <property name="obj" value="Tom"></property> -->
		<!-- 输入中注入多个值 -->
		<property name="obj">
			<value>Tom</value>
		</property>
	</bean>
</beans>